<!DOCTYPE html>
<html>
<head>
  <title><%= book %> - <%= chapter %></title>
  <style>
    body {
      max-width: 720px;
      margin: 40px auto;
      padding: 20px;
      line-height: 1.6;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
      background-color: #f9f9f9;
      font-size: 16px;
      box-shadow: 0 0 12px rgba(0,0,0,0.1);
      border-radius: 8px;
    }
    .nav-buttons {
      display: flex;
      justify-content: space-between;
      margin-top: 40px;
    }
    .nav-buttons form {
      display: inline;
    }
    .nav-buttons button {
      padding: 10px 20px;
      font-size: 16px;
      background-color: #007acc;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .nav-buttons button:hover {
      background-color: #005fa3;
    }
  </style>
</head>
<body>
  <a href="/dashboard">Back to Library</a> |
  <a href="/logout">Logout</a>
  <hr>

  <div><%- content %></div>

  <div class="nav-buttons">
    <% if (prevChapter) { %>
      <form method="GET" action="/read/<%= book %>/<%= prevChapter %>">
        <button>&larr; Previous Chapter</button>
      </form>
    <% } else { %>
      <div></div>
    <% } %>

    <% if (nextChapter) { %>
      <form method="GET" action="/read/<%= book %>/<%= nextChapter %>">
        <button>Next Chapter &rarr;</button>
      </form>
    <% } %>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const color = localStorage.getItem('textColor');
      const bg = localStorage.getItem('bgColor');
      const size = localStorage.getItem('textSize');

      if (color) document.body.style.color = color;
      if (bg) document.body.style.backgroundColor = bg;
      if (size) document.body.style.fontSize = size;
    });
  </script>
</body>
</html>
