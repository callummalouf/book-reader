<!DOCTYPE html>
<html>
<head>
  <title><%= book %> - <%= chapter %></title>
  <style>
    body {
      max-width: 720px;
      margin: 40px auto;
      padding: 20px;
      line-height: 1.6;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
      background-color: #f9f9f9;
      font-size: 16px;
      box-shadow: 0 0 12px rgba(0,0,0,0.1);
      border-radius: 8px;
    }
    .nav-buttons {
      display: flex;
      justify-content: space-between;
      margin-top: 40px;
    }
    .nav-buttons form {
      display: inline;
    }
    .nav-buttons button {
      padding: 10px 20px;
      font-size: 16px;
      background-color: #007acc;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .nav-buttons button:hover {
      background-color: #005fa3;
    }

    #settingsModal {
      display: none;
      position: fixed;
      top: 20%;
      left: 50%;
      transform: translateX(-50%);
      background: white;
      padding: 20px;
      border: 1px solid #ccc;
      box-shadow: 0 0 12px rgba(0,0,0,0.2);
      z-index: 1000;
      max-width: 300px;
      border-radius: 8px;
    }

    #settingsModal.show {
      display: block;
    }

    #settingsToggle {
      float: right;
      margin-bottom: 10px;
      font-size: 14px;
      cursor: pointer;
      color: #007acc;
    }

    #settingsToggle:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <a href="/dashboard">Back to Library</a> |
  <a href="/logout">Logout</a>
  <span id="settingsToggle">⚙️ Font Settings</span>
  <hr>

  <div><%- content %></div>

  <div class="nav-buttons">
    <% if (prevChapter) { %>
      <form method="GET" action="/read/<%= book %>/<%= prevChapter %>">
        <button>&larr; Previous Chapter</button>
      </form>
    <% } else { %>
      <div></div>
    <% } %>

    <% if (nextChapter) { %>
      <form method="GET" action="/read/<%= book %>/<%= nextChapter %>">
        <button>Next Chapter &rarr;</button>
      </form>
    <% } %>
  </div>

  <!-- Font Settings Modal -->
  <div id="settingsModal">
    <h3>Font Settings</h3>
    <label>Text Size:
      <select id="textSize">
        <option value="14px">Small</option>
        <option value="16px">Medium</option>
        <option value="20px">Large</option>
        <option value="24px">Extra Large</option>
        <option value="34px">Extra Extra Extra Large</option>
      </select>
    </label><br><br>
    <button id="saveSettings">Save</button>
    <button id="closeSettings">Close</button>
  </div>

  <script>
    const modal = document.getElementById('settingsModal');
    const toggle = document.getElementById('settingsToggle');

    toggle.onclick = () => {
      document.getElementById('textSize').value = localStorage.getItem('textSize') || '16px';
      modal.classList.add('show');
    };

    document.getElementById('closeSettings').onclick = () => {
      modal.classList.remove('show');
    };

    document.getElementById('saveSettings').onclick = () => {
      const size = document.getElementById('textSize').value;
      localStorage.setItem('textSize', size);
      document.body.style.fontSize = size;
      modal.classList.remove('show');
    };

    // Apply saved settings on load
    document.addEventListener('DOMContentLoaded', () => {
      const color = localStorage.getItem('textColor');
      const bg = localStorage.getItem('bgColor');
      const size = localStorage.getItem('textSize');

      if (color) document.body.style.color = color;
      if (bg) document.body.style.backgroundColor = bg;
      if (size) document.body.style.fontSize = size;
    });
  </script>
</body>
</html>
