<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    background-color: #1e1e1e; /* dark grey */
    margin: 0;
    padding: 40px;
    font-size: 18px;
    color: #f5f5f5; /* soft white */
  }

  .container {
    background: #2c2c2c; /* darker panel */
    padding: 30px;
    border-radius: 12px;
    max-width: 600px;
    margin: auto;
    box-shadow: 0 0 12px rgba(0, 0, 0, 0.3);
  }

  h2 {
    text-align: center;
    margin-bottom: 30px;
    font-size: 26px;
    color: #ffffff;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  li {
    margin: 15px 0;
  }

  a {
    text-decoration: none;
    color: #66bfff;
    font-weight: bold;
  }

  a:hover {
    text-decoration: underline;
  }

  .top-bar {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .top-bar a, .top-bar button {
    padding: 10px 16px;
    font-size: 16px;
    border: none;
    border-radius: 6px;
    background-color: #007acc;
    color: white;
    text-decoration: none;
    cursor: pointer;
  }

  .top-bar a:hover, .top-bar button:hover {
    background-color: #005fa3;
  }

  #settingsModal {
    display: none;
    position: fixed;
    top: 20%;
    left: 50%;
    transform: translateX(-50%);
    background: #2c2c2c;
    padding: 20px;
    border: 1px solid #444;
    box-shadow: 0 0 12px rgba(0,0,0,0.4);
    z-index: 1000;
    max-width: 300px;
    border-radius: 8px;
    color: #f5f5f5;
  }

  #settingsModal.show {
    display: block;
  }

  #settingsModal label {
    display: block;
    margin-bottom: 10px;
  }

  #settingsModal input,
  #settingsModal select {
    background-color: #1e1e1e;
    color: #f5f5f5;
    border: 1px solid #777;
    border-radius: 4px;
    padding: 5px;
    width: 100%;
  }

  #settingsModal button {
    margin-top: 10px;
    background-color: #007acc;
    color: white;
    border: none;
    border-radius: 6px;
    padding: 8px 12px;
    cursor: pointer;
  }

  #settingsModal button:hover {
    background-color: #005fa3;
  }
</style>
